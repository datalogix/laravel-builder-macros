{
    "name": "datalogix/laravel-builder-macros",
    "description": "A set of useful Laravel builder macros.",
    "keywords": [
        "laravel",
        "query",
        "sql",
        "builder",
        "macros"
    ],
    "homepage": "https://github.com/datalogix/laravel-builder-macros",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ricardo Gobbo de Souza",
            "email": "ricardogobbosouza@yahoo.com.br"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/database": "^8.0|^9.0|^10.0",
        "illuminate/support": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "graham-campbell/testbench": "^6.0",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^9.5|^10.0",
        "spatie/phpunit-watcher": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "Datalogix\\BuilderMacros\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Datalogix\\BuilderMacros\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "watch": "vendor/bin/phpunit-watcher watch"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Datalogix\\BuilderMacros\\BuilderMacroServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
